<div class="form-horizontal text-left" method="post">
        <div class="control-group">
            <label class="control-label" for="inputEmail">原始密码</label>
            <div class="controls">
                <input id="id_old_password" maxlength="30" name="old_password" size="30" type="password">
                <span class="inline label label-important"></span>
                <!-- <span class="help-block"><a href="#">你竟然把密码给忘记了？</a></span> -->
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputEmail">新密码</label>
            <div class="controls">
            <input id="id_new_password" maxlength="30" name="new_password" size="30" type="password">
            <span class="inline label label-important"></span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="inputEmail">确认密码</label>
            <div class="controls">
                <input id="id_new_password_confirm" maxlength="30" name="new_password_confirm" size="30" type="password">
                <span class="inline label label-important"></span>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button id="resetPwd" class="btn btn-info">保存更改</button>
            </div>
        </div>
    </div>